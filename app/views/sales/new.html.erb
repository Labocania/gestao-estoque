<h1>Venda nova:</h1>

<div class="form-horizontal">
  <%= form_for [@produto, @produto.sales.build] do |f| %>
  
  <% if @produto.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@produto.errors.count, "error") %> prohibited this article from being saved:</h2>
   
      <ul>
      <% @produto.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <div class="col-lg-1">
      <%= f.label :quantidade %>
      <%= f.number_field :sale_quantity, in: 1..1000, step: 1, default: 1, class:"form-control", id:"select" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-0">
      <%= f.submit "Vender novo produto", class:"btn btn-primary" %>
    </div>
  </div>
  
  <% end %>
</div>